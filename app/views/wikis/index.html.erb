<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
          <% if !wiki.private? %>
              <%= link_to markdown(wiki.title), wiki %>
          </h4>
          <small>
            <%= markdown(wiki.body) %>
          </small>
          <% elsif user_is_authorized_for_private? %>
            <h4 class="media-heading">
              <%= link_to markdown(wiki.title), wiki %>
            </h4>
            <small>
              <%= markdown(wiki.body) %>
            </small>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
  </div>
</div>
